<form class="form-horizontal">
	<h3>OctoLight settings</h3>
	<div class="control-group">
		<label class="control-label">{{ _('Light Toggle GCODE Command') }}</label>
		<div class="controls">
			<input id="light_pin-Toggle" type="text" class="input-small" data-bind="value: settings.plugins.octolight.gCodeToggleCommand">
		</div>
	</div>
	<div class="control-group">
		<label class="control-label">{{ _('Light State GCODE Command') }}</label>
		<div class="controls">
			<input id="light_pin-State" type="text" class="input-small" data-bind="value: settings.plugins.octolight.gCodeStateCommand">
		</div>
	</div>
</form>